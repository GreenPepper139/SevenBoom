@page "/"

<PageTitle>Boom!</PageTitle>

<h1 class="shadow-lg">Seven Boom</h1>

<div class="container">
    <div class="row full-height">
        <div class="col-lg-6 col-md-6 col-sm-6">
            <img src="images/7BoomPic.jpeg" alt="7BoomLogo" class="img-fluid rounded"/>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6">
            <p>
               @for (int i = 1; i < 101; i++)
               {
                    <span>
                        @IsBoom(i)
                        <span> </span>
                    </span>
               }
            </p>
        </div>
    </div>
</div>

@code {
    public static string IsBoom(int num)
    {
        if ((num % 7 == 0) || (num % 10 == 7))
            return "Boom";
        return num.ToString();
    }
}
